# n8n Environment Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Basic Configuration
N8N_PORT={{ n8n_port }}
N8N_HOST={{ n8n_host }}
N8N_PROTOCOL={{ n8n_protocol }}
WEBHOOK_URL={{ n8n_webhook_url }}

# Database Configuration
DB_TYPE={{ n8n_db_type }}
DB_POSTGRESDB_HOST={{ n8n_db_host }}
DB_POSTGRESDB_PORT={{ n8n_db_port }}
DB_POSTGRESDB_DATABASE={{ n8n_db_name }}
DB_POSTGRESDB_USER={{ n8n_db_user }}
DB_POSTGRESDB_PASSWORD={{ n8n_db_password }}

# Security
N8N_ENCRYPTION_KEY={{ n8n_encryption_key }}
N8N_SECURE_COOKIE={{ n8n_secure_cookie | string | lower }}
N8N_BASIC_AUTH_ACTIVE={{ n8n_basic_auth_active | string | lower }}

# Execution
EXECUTIONS_PROCESS={{ n8n_executions_process }}
EXECUTIONS_TIMEOUT={{ n8n_executions_timeout }}
EXECUTIONS_TIMEOUT_MAX={{ n8n_executions_timeout_max }}

# Timezone
GENERIC_TIMEZONE={{ n8n_timezone }}
TZ={{ n8n_timezone }}

# Logging
N8N_LOG_LEVEL={{ n8n_log_level }}

# Community Nodes
N8N_COMMUNITY_PACKAGES_ENABLED={{ n8n_enable_community_nodes | string | lower }}
{% if n8n_nodes_include | length > 0 %}
NODES_INCLUDE={{ n8n_nodes_include | join(',') }}
{% endif %}
{% if n8n_nodes_exclude | length > 0 %}
NODES_EXCLUDE={{ n8n_nodes_exclude | join(',') }}
{% endif %}
