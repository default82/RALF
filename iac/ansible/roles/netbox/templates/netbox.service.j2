[Unit]
Description=NetBox WSGI Service
Documentation=https://docs.netbox.dev/
After=network.target redis-server.service postgresql.service
Requires=redis-server.service

[Service]
Type=simple
User={{ netbox_user }}
Group={{ netbox_group }}
WorkingDirectory={{ netbox_install_dir }}/netbox
ExecStart={{ netbox_venv_dir }}/bin/gunicorn \
    --pid /var/tmp/netbox.pid \
    --pythonpath {{ netbox_install_dir }}/netbox \
    --bind {{ netbox_gunicorn_bind }} \
    --workers {{ netbox_gunicorn_workers }} \
    --timeout {{ netbox_gunicorn_timeout }} \
    --max-requests {{ netbox_gunicorn_max_requests }} \
    --max-requests-jitter {{ netbox_gunicorn_max_requests_jitter }} \
    netbox.wsgi
Restart={{ netbox_service_restart }}
RestartSec={{ netbox_service_restart_sec }}
PrivateTmp=true

[Install]
WantedBy=multi-user.target
