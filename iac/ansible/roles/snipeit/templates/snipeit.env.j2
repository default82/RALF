# Snipe-IT Configuration
# Generated by Ansible

# --------------------------------------------
# REQUIRED: Application Settings
# --------------------------------------------
APP_ENV={{ snipeit_app_env }}
APP_DEBUG={{ snipeit_app_debug }}
APP_KEY={{ snipeit_app_key }}
APP_URL={{ snipeit_app_url }}
APP_TIMEZONE='{{ snipeit_app_timezone }}'
APP_LOCALE={{ snipeit_app_locale }}

# --------------------------------------------
# REQUIRED: Database Settings (MariaDB)
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST={{ snipeit_db_host }}
DB_PORT={{ snipeit_db_port }}
DB_DATABASE={{ snipeit_db_name }}
DB_USERNAME={{ snipeit_db_user }}
DB_PASSWORD={{ snipeit_db_pass }}

# --------------------------------------------
# Mail Configuration (optional)
# --------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_ENCRYPTION=null
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDR=noreply@localhost
MAIL_FROM_NAME='Snipe-IT'

# --------------------------------------------
# Cache & Session
# --------------------------------------------
CACHE_DRIVER={{ snipeit_cache_driver }}
SESSION_DRIVER={{ snipeit_session_driver }}
QUEUE_DRIVER={{ snipeit_queue_driver }}

# --------------------------------------------
# Security
# --------------------------------------------
APP_ALLOW_INSECURE_HOSTS=false
ENABLE_BACKUP=false

# --------------------------------------------
# Logging
# --------------------------------------------
APP_LOG=daily
APP_LOG_LEVEL=warning

# --------------------------------------------
# Optional Features
# --------------------------------------------
ENABLE_LDAP_PWD_SYNC=false
LDAP_ENABLED=false
REQUIRE_SAML=false
